    "#calculate the number of digits and letters\n",
    "s = input(\"Input a string:\")\n",
    "d=0\n",
    "l=0\n",
    "for n in s:\n",
    "    if(n.isdigit()):\n",
    "        d=d+1\n",
    "    elif(n.isalpha()):\n",
    "        l=l+1   \n",
    "print(\"No of Letters:\", l)\n",
    "print(\"No of Digits:\", d)"
